# LiveKit Server Configuration
# Generate API key/secret: https://docs.livekit.io/home/self-hosting/generate-keys/

# LiveKit API credentials (required)
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=your-secret-key-min-32-chars-here

# LiveKit server URL (for agents connecting to the server)
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_WS_URL=ws://localhost:7880
LIVEKIT_HTTP_URL=http://localhost:7880

# Webhook URL for LiveKit events (your Next.js API endpoint)
LIVEKIT_WEBHOOK_URL=https://your-domain.com/api/webhooks/livekit

# SIP/Telephony Configuration (Twilio or Telnyx)
SIP_TRUNK_HOST=your-sip-trunk.pstn.twilio.com
SIP_TRUNK_USERNAME=your-sip-username
SIP_TRUNK_PASSWORD=your-sip-password

# Twilio Credentials (for SMS and SIP)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI API Key (for AI voice agent)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Redis Configuration (if using external Redis)
REDIS_URL=redis://localhost:6379

# External IP (for cloud deployments)
# Set this to your server's public IP address
EXTERNAL_IP=

# TURN Server Domain (for NAT traversal)
TURN_DOMAIN=turn.your-domain.com

# Recording Storage (S3-compatible)
EGRESS_S3_ENDPOINT=
EGRESS_S3_ACCESS_KEY=
EGRESS_S3_SECRET_KEY=
EGRESS_S3_BUCKET=livekit-recordings
EGRESS_S3_REGION=us-west-2

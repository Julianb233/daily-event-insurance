# Daily Event Insurance - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# CORE DATABASE (Required)
# ===========================================
# Neon PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require
POSTGRES_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# DEVELOPMENT MODE (Optional - Dev Only)
# ===========================================
# SECURITY WARNING: Never set these in production!
# To bypass authentication in development:
# 1. Set NODE_ENV=development (automatic in dev)
# 2. Set DEV_AUTH_BYPASS=true (explicit opt-in)
# 3. Do NOT set AUTH_SECRET (prevents bypass if secret exists)
# DEV_AUTH_BYPASS=true

# ===========================================
# SUPABASE (Optional - for file storage)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# FORM WEBHOOKS (Required for lead capture)
# ===========================================
NEXT_PUBLIC_FORM_WEBHOOK_URL=https://your-webhook-endpoint.com/api/leads

# ===========================================
# GO HIGH LEVEL (GHL) INTEGRATION
# ===========================================
# API Credentials
GHL_API_KEY=your-ghl-api-key
GHL_LOCATION_ID=your-location-id

# Webhook Security (Required for production)
# Generate with: openssl rand -hex 32
GHL_WEBHOOK_SECRET=your-ghl-webhook-secret-here

# Document Template IDs
GHL_DOC_PARTNER_AGREEMENT_ID=doc_template_id
GHL_DOC_W9_ID=doc_template_id
GHL_DOC_DIRECT_DEPOSIT_ID=doc_template_id

# Workflow IDs
GHL_WORKFLOW_WELCOME_ID=workflow_id
GHL_WORKFLOW_DOCS_SENT_ID=workflow_id
GHL_WORKFLOW_DOCS_COMPLETE_ID=workflow_id
GHL_WORKFLOW_APPROVED_ID=workflow_id

# Pipeline & Stage IDs
GHL_PIPELINE_ONBOARDING_ID=pipeline_id
GHL_STAGE_NEW_LEAD_ID=stage_id
GHL_STAGE_DOCS_SENT_ID=stage_id
GHL_STAGE_DOCS_PENDING_ID=stage_id
GHL_STAGE_REVIEW_ID=stage_id
GHL_STAGE_ACTIVE_ID=stage_id
GHL_STAGE_DECLINED_ID=stage_id

# ===========================================
# EMAIL SERVICE (Required for automation)
# ===========================================
# Resend API Key - Get from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# ===========================================
# SALES NOTIFICATIONS (Required for lead alerts)
# ===========================================
# Email address to receive new lead notifications
SALES_NOTIFICATION_EMAIL=julian@dailyeventinsurance.com

# Slack webhook URL for real-time lead notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ===========================================
# FIRECRAWL (Required for branding extraction)
# ===========================================
# Get from https://firecrawl.dev
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key

# ===========================================
# GOOGLE SHEETS (Required for partner sync)
# ===========================================
# Service account credentials JSON (stringified)
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"..."}
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id

# ===========================================
# AI & EXTERNAL SERVICES (Optional)
# ===========================================
# Google AI Studio (for image generation scripts)
GOOGLE_AI_STUDIO_KEY=your-google-ai-key

# Notion API (for content management)
NOTION_API_KEY=your-notion-api-key

# ===========================================
# CRON JOBS (Required for email automation)
# ===========================================
# Secret for authenticating cron job requests
CRON_SECRET=your-cron-secret-here

# ===========================================
# DEPLOYMENT
# ===========================================
# Set to production URL when deployed
NEXT_PUBLIC_AUTH_SECRET=your-public-auth-indicator

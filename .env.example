# Daily Event Insurance - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# CORE DATABASE (Required)
# ===========================================
# Supabase PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host.supabase.co:5432/postgres?pgbouncer=true
POSTGRES_URL=postgresql://user:password@host.supabase.co:5432/postgres?pgbouncer=true
# Direct connection for migrations
DIRECT_URL=postgresql://user:password@db.host.supabase.co:5432/postgres

# ===========================================
# AUTHENTICATION (Required)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# SUPABASE (Required)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# FORM WEBHOOKS (Required for lead capture)
# ===========================================
NEXT_PUBLIC_FORM_WEBHOOK_URL=https://your-webhook-endpoint.com/api/leads

# ===========================================
# STRIPE PAYMENT PROCESSING (Required)
# ===========================================
# Get your test keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Webhook secret from https://dashboard.stripe.com/test/webhooks
# Create webhook endpoint: /api/stripe/webhook
# Events to listen for: checkout.session.completed, payment_intent.payment_failed, charge.refunded
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# EMAIL SERVICE (Required for confirmations)
# ===========================================
# Provider: "resend" | "sendgrid" | "console" (console = log only, for dev)
EMAIL_PROVIDER=console
# Resend API key from https://resend.com
RESEND_API_KEY=re_your_resend_api_key
# Or SendGrid API key
# SENDGRID_API_KEY=SG.your_sendgrid_api_key
# Sender configuration
EMAIL_FROM=noreply@dailyeventinsurance.com
EMAIL_FROM_NAME=Daily Event Insurance

# ===========================================
# AI & EXTERNAL SERVICES (Optional)
# ===========================================
# Google AI Studio (for image generation scripts)
GOOGLE_AI_STUDIO_KEY=your-google-ai-key

# ===========================================
# DEPLOYMENT
# ===========================================
# Set to production URL when deployed
NEXT_PUBLIC_APP_URL=https://your-production-url.com
